<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hzk.springmvc.demo3.dao.ShopDao">
	
	<select id="getById" parameterType="int" resultType="Shop">
		SELECT * FROM ocean."Shop" WHERE "ID" = #{id}
	</select>
	
	<select id="getAll"  resultType="Shop">
SELECT 
  "Shop"."ID", 
  "Shop"."Booth", 
  "Shop"."SpecialName", 
  "Shop"."BrandID"
FROM 
  ocean."Shop"
	</select>
	
	<select id="getAllByBrand"  parameterType="int" resultType="Shop">
SELECT 
  "Shop"."ID", 
  "Shop"."Booth", 
  "Shop"."SpecialName", 
  "Shop"."BrandID" 
FROM 
  ocean."Shop"
WHERE "BrandID"=#{brandId}
	</select>
</mapper>